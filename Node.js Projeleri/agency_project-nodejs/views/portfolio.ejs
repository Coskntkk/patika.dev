<!-- Portfolio Grid-->
<section class="page-section bg-light" id="portfolio">
    <div class="container position-relative">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Portfolio</h2>
            <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
            <!-- Button trigger modal -->
            <div class="position-absolute bottom-0 start-50 translate-middle-x">
                <button type="button" class="btn btn-primary addBtn" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                    POST NEW
                </button>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-sm-6 mb-4">
                <!-- Portfolio item 1-->
                <% for (let i=0; i<projects.length; i++) { %>
                <div class="portfolio-item">
                    <a class="portfolio-link" data-bs-toggle="modal" href="#portfolioModal1">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content"><i class="fas fa-plus fa-3x"></i></div>
                        </div>
                        <img class="img-fluid" src="<%= projects[i].image %>" alt="..." />
                    </a>
                    <div class="portfolio-caption">
                        <div class="portfolio-caption-heading"><%= projects[i].name %></div>
                        <div class="portfolio-caption-subheading text-muted"><%= projects[i].description %></div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</section>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <form action="/projects" method="post">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Project Name</label>
                <input type="text" class="form-control" name="name" id="exampleInputEmail1" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Project Description</label>
                <textarea type="text" class="form-control" name="description" id="exampleInputPassword1"></textarea>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Project Category</label>
                <input type="text" class="form-control" name="category" id="exampleInputPassword1">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">CANCEL</button>
                <button type="submit" class="btn btn-primary">POST</button>
            </div>
        </form>
      </div>
    </div>
</div>

<% for (let i=0; i<projects.length; i++) { %>
<!-- Portfolio Modals-->
<!-- Portfolio item 1 modal popup-->
<div class="portfolio-modal modal fade" id="portfolioModal1" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="close-modal" data-bs-dismiss="modal"><img src="assets/img/close-icon.svg" alt="Close modal" /></div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="modal-body">
                            <!-- Project details-->
                            <h2 class="text-uppercase"><%= projects[i].name %></h2>
                            <img class="img-fluid d-block mx-auto" src="<%= projects[i].image %>" alt="..." />
                            <p><%= projects[i].description %></p>
                            <ul class="list-inline">
                                <li>
                                    <strong>Category:</strong>
                                    <%= projects[i].category %>
                                </li>
                            </ul>
                            <button class="btn btn-success btn-xl" data-bs-dismiss="modal" type="button">
                                Close Project
                            </button>
                            <button type="button" class="btn btn-warning btn-xl" data-bs-toggle="modal" data-bs-target="#update">
                                Update Project
                            </button>
                            <a href="/projects/<%= projects[i]._id %>?_method=DELETE" class="btn btn-danger btn-xl" onclick="return confirm('Are your sure?')" ><span>Delete</span></a>	
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="update" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <form action="/projects/<%= projects[i]._id %>?_method=PUT" method="post">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Project Name</label>
                <input type="text" class="form-control" name="name" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= projects[i].name %>">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Project Description</label>
                <textarea type="text" class="form-control" name="description" id="exampleInputPassword1" value="<%= projects[i].description %>"></textarea>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Project Category</label>
                <input type="text" class="form-control" name="category" id="exampleInputPassword1" value="<%= projects[i].category %>">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">CANCEL</button>
                <button type="submit" class="btn btn-primary">UPDATE</button>
            </div>
        </form>
      </div>
    </div>
  </div>
<% } %>
